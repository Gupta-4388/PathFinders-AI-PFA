/**
 * PathFinders AI Security Ruleset.
 * Enforces strict user-ownership based on the authenticated user's UID.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User Profile Rules
    match /users/{userId} {
      // Users can only read their own profile document.
      allow get: if isOwner(userId);
      
      // Explicitly deny listing the users collection for security.
      allow list: if false;
      
      // Users can create, update, or delete their own profile document.
      allow write: if isOwner(userId);
    }

    // Subcollection Rules
    // Ensure all user-specific data (resumes, mentors, dashboards) is owned by the user.
    
    match /users/{userId}/resumes/{resumeId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/aiMentors/{aiMentorId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/careerDashboards/{careerDashboardId} {
      allow read, write: if isOwner(userId);
    }
  }
}
